@model IEnumerable<PublicationListingViewModel>

<div class="row text-center">
    @foreach (var publication in Model)
    {
        <div class="col-md-4 text-center">
            <div class="card mb-3">
                <img class="card-img-top text-center" src="@publication.ImageUrl" alt="@publication.Title">
                <div class="card-body text-center">
                    <h5 class="card-title text-center">@publication.Title  </h5>
                    <h6 class="card-title text-danger text-center">@(publication.Sections)</h6>
                    <p class="card-text text-center">Post something</p>
                    <a asp-controller="Publications" asp-action="Details" asp-route-id="@publication.Id" class="btn btn-primary">View More</a>
                </div>
            </div>
        </div>
    }
</div>