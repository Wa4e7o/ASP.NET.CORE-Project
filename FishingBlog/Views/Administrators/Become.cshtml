@model BecomeAdminFormModel 

@{ ViewBag.Title = "Become Administrator"; }

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-8 col-sm-12">
            <h2 class="heading-margin text-center">
                ViewBag.Title
            </h2>

            <form method="post">
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" placeholder="Some cool NickName">
                    <span asp-validation-for="UserName" class="small text-danger"></span>
                </div>
                <input class="btn btn-primary text-center" type="submit" value="Add">
            </form>
        </div>
    </div>
</div>