@model AddPublicationFormModel

@{
    ViewData["Title"] = "Add Publication";
}

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-8 col-sm-12">
            <h2 class="heading-margin text-center">
                Add something interesting
            </h2>

            <form method="post">
                <div class="form-group">
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control" placeholder="Some cool title...">
                    <span asp-validation-for="Title" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Write clear and accorate description ..."></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control" placeholder="Place your URL here...">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PublishedOn"></label>
                    <input asp-for="PublishedOn" class="form-control" placeholder="@DateTime.UtcNow.ToString("MM/dd/yyyy")" readonly>
                </div>
                <div class="form-group">
                    <label asp-for="TopicId"></label>
                    <select asp-for="TopicId" class="form-control">
                        @foreach (var categori in Model.Sections)
                        {
                            <option value="@categori.Id">@categori.Title</option>
                        }
                    </select>
                </div>

                <input class="btn btn-primary text-center" type="submit" value="Add">
            </form>
        </div>
    </div>
</div>